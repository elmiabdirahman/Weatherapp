<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/condition_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sun"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toEndOf="@+id/condition_icon"
        app:layout_constraintLeft_toRightOf="@+id/condition_icon"
        android:textColor="@color/black"
        tools:text="Jan 31"/>

    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintLeft_toRightOf="@+id/date"
        app:layout_constraintRight_toLeftOf="parent"
        tools:text="Temp:"/>

    <TextView
        android:id="@+id/degree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/temp1"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        tools:text="72°" />

    <TextView
        android:id="@+id/HighTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/temp1"
        android:textColor="@color/black"
        tools:text="High:"
        />

    <TextView
        android:id="@+id/degree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/HighTem"
        app:layout_constraintLeft_toRightOf="@+id/HighTem"
        android:textColor="@color/black"
        tools:text="80°"/>

    <TextView
        android:id="@+id/lowTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/degree2"
        app:layout_constraintTop_toBottomOf="@+id/degree1"
        android:textColor="@color/black"
        tools:text="Low:"/>

    <TextView
        android:id="@+id/degree3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lowTem"
        app:layout_constraintTop_toBottomOf="@+id/degree1"
        android:textColor="@color/black"
        tools:text="65°"/>

    <TextView
        android:id="@id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        tools:text="8:00am"/>

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        tools:text="Sunrise:"/>

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:textColor="@color/black"
        tools:text="9:00pm"/>

    <TextView
        android:id="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        app:layout_constraintTop_toTopOf="@+id/time2"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        tools:text="Sunset:"/>

</androidx.constraintlayout.widget.ConstraintLayout>